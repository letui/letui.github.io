;(function($){$.fn.layzLoad=function(options){var defaults={attr:"data-src",container:window};var params=$.extend({},defaults,options||{});var container=$(params.container);params.cache=[];$(this).each(function(){var that=$(this);var node=this.nodeName.toLowerCase();var url=that.attr(params.attr);params.cache.push({obj:$(this),tag:node,url:url})});var loading=function loading(isFirst){var contHeight,contWidth,contop,conLeft;if(container.get(0)===window){contHeight=container.height();contWidth=container.width();contop=$(window).scrollTop();conLeft=$(window).scrollLeft()}else{contHeight=container.outerHeight();contWidth=container.outerWidth();contop=container.offset().top;conleft=container.offset().left}$.each(params.cache,function(i,data){var o=data.obj,tag=data.tag,url=data.url,post,posb;if(o){if(typeof isFirst!=="boolean"){var parentW=o.parent().width();var parentH=o.parent().height();var objW=o.width();var objH=o.height();if(objH<=1&&parentH<=2){o.addClass("min-width")}else if(objH<=1&&parentH>2){o.attr({width:parentW,height:parentH,"data-newWidth":true})}}post=o.offset().top-(contop+contHeight);posb=o.offset().top+o.height()-contop;if(post<0&&posb>=0){if(url){if(tag==="img"){o.attr("src",url)}else{o.closest(".img-wrap").append('<img class="hide" src="'+url+'"/>')}}data.obj=null}}})};loading(true);container.bind("scroll",loading)}})(jQuery);$(function(){var node=$(".ec-h5 .right_box .formBox img");node.layzLoad();$("#form_data img").error(function(){$(this).addClass("error-img").attr("src",domains+"images/form/warn.png")});node.load(function(){var element=$(this).closest(".optionList").find("div.pic");var parentThreeNode=$(this).closest(".optionList.three-columns");var parenSecondNode=$(this).closest(".optionList.two-columns");var clearNode=$(this).parent().nextAll(".clear:eq(0)");if($(this).attr("data-newwidth")){$(this).removeAttr("width").removeAttr("height")}$(this).removeClass("img-loading min-width");var maxHeight=0;if(parentThreeNode.length||parenSecondNode.length){var heightArr=[];$.each(clearNode.prevUntil(".clear"),function(index,ele){var load=$(ele).find(".img-loading");if(load.length===0){var temp=$(ele).find(".pic");var tempH=temp.height();maxHeight=maxHeight>tempH?maxHeight:tempH;heightArr.push({dom:temp,height:tempH})}});for(var i=0;i<heightArr.length;i++){if(heightArr[i].height<maxHeight){var pad=(maxHeight-heightArr[i].height)/2;heightArr[i].dom.css("padding",pad+"px 0")}}}if(!clearNode.length&&(parentThreeNode.length||parenSecondNode.length)){var widths=parentThreeNode.length?"101px":"160px";var heights=parentThreeNode.length?"101px":"106px";$(this).css({width:widths,height:heights});$(this).parents(".optionList").find("div.pic").css({width:widths,height:heights})}})});